{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./.tmp/build/",
        "moduleResolution": "node",
        "declaration": true,
        "paths": {
            "@/*": [
              "src/*"
            ]
        },
        "lib": [
            "es2015",
            "dom"
        ]
    },
    //"files": [
    //    "./src/visual.ts"
    //],
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "assets",
        ".tmp",
        "vscode"
    ],

}